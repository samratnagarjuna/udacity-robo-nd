<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  
  <!-- Define materials -->
  <xacro:macro name="material_orange">
    <material name="orange">
      <color rgba="0.929 0.6 0.196 1"/>
    </material>
  </xacro:macro>

  <xacro:macro name="material_brown">
    <material name="brown">
      <color rgba="0.596 0.474 0.325 1"/>
    </material>
  </xacro:macro>

  <!-- Use macros for materials -->
  <xacro:material_orange/>
  <xacro:material_brown/>
  
  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".4 .3 .1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .3 .1"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision name='back_caster_collision'>
      <origin xyz="-0.15 0 -0.06" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0599"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.15 0 -0.06" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.06" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0599"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.06" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
    </visual>

  </link>
  
  <gazebo reference="chassis">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <!-- Left Wheel -->
  <link name="left_wheel">
  
    <inertial>
      <mass value="5.0" />
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    
    <collision name="left_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
    </collision>
    
    <visual name="left_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
      <material name="brown"/>
    </visual>
    
  </link>
  
  <gazebo reference="left_wheel">
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="left_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="0 0.18 0" />
    <parent link="chassis" />
    <child link="left_wheel" />
    <axis xyz="0 1 0" />
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
  
    <inertial>
      <mass value="5.0" />
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    
    <collision name="right_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
    </collision>
    
    <visual name="right_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
      <material name="brown"/>
    </visual>
    
  </link>
  
  <gazebo reference="right_wheel">
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="right_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="0 -0.18 0" />
    <parent link="chassis" />
    <child link="right_wheel" />
    <axis xyz="0 1 0" />
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  
  <!-- Camera -->
  <link name="camera">
    <inertial>
      <mass value="0.1" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision name="camera_collision">
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </collision>
    <visual name="camera_visual">
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </visual>
  </link>
  
  <gazebo reference="camera">
    <material>Gazebo/Green</material>
  </gazebo>
  
  <joint name="camera_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.2 0 0" />
    <parent link="chassis" />
    <child link="camera" />
    <axis xyz="0 1 0" />
  </joint>
  
  <!-- Lidar -->
  <link name="hokuyo">
    <inertial>
      <mass value="1e-5" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision name="hokuyo_collision">
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>
    <visual name="hokuyo_visual">
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="hokoyu_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.15 0 0.1" />
    <parent link="chassis" />
    <child link="hokuyo" />
    <axis xyz="0 1 0" />
  </joint>
  
  <!-- Optical camera -->
  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 -1.5707"/>
    <parent link="camera"/>
    <child link="camera_link_optical"/>
  </joint>
  
  <link name="camera_link_optical">
  </link>

</robot>
